<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFE8D6"
    tools:context=".ui.view.ProductAddFragment">

    <TextView
        android:id="@+id/lblName"
        android:layout_width="131dp"
        android:layout_height="36dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/roboto_thin"
        android:text="Nombre:"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etDiscount"
        android:layout_width="186dp"
        android:layout_height="40dp"
        android:layout_marginTop="132dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/etimg"
        app:layout_constraintTop_toTopOf="@+id/lblPrecio" />

    <TextView
        android:id="@+id/lblimg"
        android:layout_width="104dp"
        android:layout_height="22dp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/roboto_thin"
        android:text="Imagen:"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/lblDesc"
        app:layout_constraintTop_toBottomOf="@+id/lblDesc" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="129dp"
        android:layout_height="53dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#B7B7A4"
        android:text="Volver"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAgregar" />

    <EditText
        android:id="@+id/etPrice"
        android:layout_width="186dp"
        android:layout_height="40dp"
        android:layout_marginTop="72dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/etimg"
        app:layout_constraintTop_toTopOf="@+id/lblPrecio" />

    <EditText
        android:id="@+id/etName"
        android:layout_width="186dp"
        android:layout_height="40dp"
        android:layout_marginStart="48dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/lblName"
        app:layout_constraintTop_toTopOf="@+id/lblName" />

    <TextView
        android:id="@+id/lblPrecio"
        android:layout_width="106dp"
        android:layout_height="35dp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/roboto_thin"
        android:text="Total:"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/lblimg"
        app:layout_constraintTop_toBottomOf="@+id/lblimg" />

    <EditText
        android:id="@+id/etDesc"
        android:layout_width="186dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/etName"
        app:layout_constraintTop_toBottomOf="@+id/etName" />

    <TextView
        android:id="@+id/lblPrice4"
        android:layout_width="106dp"
        android:layout_height="35dp"
        android:layout_marginTop="232dp"
        android:fontFamily="@font/roboto_thin"
        android:text="Disponible"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/lblimg"
        app:layout_constraintTop_toBottomOf="@+id/lblimg" />

    <TextView
        android:id="@+id/lblPrice"
        android:layout_width="106dp"
        android:layout_height="35dp"
        android:layout_marginTop="104dp"
        android:fontFamily="@font/roboto_thin"
        android:text="Precio:"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/lblimg"
        app:layout_constraintTop_toBottomOf="@+id/lblimg" />

    <EditText
        android:id="@+id/etDisp"
        android:layout_width="186dp"
        android:layout_height="40dp"
        android:layout_marginTop="196dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/etimg"
        app:layout_constraintTop_toTopOf="@+id/lblPrecio" />

    <EditText
        android:id="@+id/etTotal"
        android:layout_width="186dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/etimg"
        app:layout_constraintTop_toTopOf="@+id/lblPrecio" />

    <Button
        android:id="@+id/btnAgregar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="244dp"
        android:backgroundTint="#B7B7A4"
        android:text="Agregar"
        app:iconTint="#E91E63"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblPrecio" />

    <EditText
        android:id="@+id/etimg"
        android:layout_width="186dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/etDesc"
        app:layout_constraintTop_toTopOf="@+id/lblimg" />

    <TextView
        android:id="@+id/lblPrice3"
        android:layout_width="106dp"
        android:layout_height="35dp"
        android:layout_marginTop="164dp"
        android:fontFamily="@font/roboto_thin"
        android:text="Descuento:"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/lblimg"
        app:layout_constraintTop_toBottomOf="@+id/lblimg" />

    <TextView
        android:id="@+id/lblDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/roboto_thin"
        android:text="DescripciÃ³n:"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/lblName"
        app:layout_constraintTop_toBottomOf="@+id/lblName" />

</androidx.constraintlayout.widget.ConstraintLayout>